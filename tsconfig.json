{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments" : false,
        "declaration" : true,
        "baseUrl" : "lib",
        "outDir": "./lib/",
        "rootDir" : "./src/",
        "paths" : {
            "log" : ["./lib/log"]
        }
    },
    "exclude" : [
        "./app",
        "./cli",
        "./node_modules",
        "./dist"
    ]
}